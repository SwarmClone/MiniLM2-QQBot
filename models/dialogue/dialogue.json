{
    "model": "NGPT",
    
    "dataset_path": "../../datasets/dialogue/dataset.json",
    "tokenizer_path": "../tokenizer32k.json",
    "max_length": 1024,
    "model_dim": 1024,
    "num_heads": 16,
    "num_layers": 20,
    "finetune_layers": 4,
    "dropout": 0.1,
    "batch_size": 1,
    "val_batch_size": 0,
    "n_batches_per_step": 128,
    "max_learning_rate": 1e-4,
    "min_learning_rate": 1e-6,
    "warmup_steps": 0,
    "total_steps": 2000,
    "validation_interval": 50,

    "system_prompt": "人类：你是一个名为MiniLM2的小型语言模型。我是你的开发者。想和我闲聊一下吗？\n\n\nAI：好的，开发者。我是MiniLM2。我的名字是MiniLM2，我是一个小型语言模型。我当然愿意和你聊天了。让我们聊一聊吧！",

    "top_p": 0.6,
    "temperature": 0.5,

    "checkpoint_file": "checkpoint_36.pt",
    "checkpoint_step": 36,

    "log_file": "dialogue.log"
}
